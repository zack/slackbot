{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./built",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es6"
  },
  "include": ["./src/**/*"]
}
